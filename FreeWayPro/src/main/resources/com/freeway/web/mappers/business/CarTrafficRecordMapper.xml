<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper的配置信息 -->
<mapper namespace="com.freeway.web.mappers.business.CarTrafficRecordMapper">
    <!-- query condition -->
    <sql id="where_clause">
        WHERE
        <choose>
            <when test="icCode != null and icCode != ''">
                icCode = #{icCode}
            </when>
            <when test="carCode != null and carCode != ''">
                carRecognize = #{carCode}
            </when>
            <when test="complexCode != null and complexCode != ''">
                substr(carRecognize, -7) = #{complexCode} or icCode = #{complexCode}
            </when>
        </choose>
    </sql>
    
	<!-- 车流量分页数据查询 -->
	<select id="findByCondition" resultType="CarTrafficRecord"
		parameterType="ConditionFiled">
            SELECT * FROM (
                SELECT a.*, row_number() OVER (ORDER BY a.tolldate) rn 
                FROM   tracking_view a
                <include refid="where_clause"></include>
            )
            WHERE rn > #{start} and #{limit} >= rn
	</select>
	
	<!-- 车流量总数据量查询 -->
	<select id="selectCount" resultType="Integer" parameterType="ConditionFiled">
	    SELECT COUNT(recordNo)
	    FROM   tracking_view
        <include refid="where_clause"></include>
	</select>
</mapper>